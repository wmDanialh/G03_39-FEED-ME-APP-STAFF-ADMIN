<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/confirm"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMED"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_below="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Shipped ID:"
                android:textAllCaps="true"
                android:id="@+id/order_shipped"
                android:gravity="center_vertical|start"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/Staff_order_id"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="#11111"
                android:textSize="15sp"
                android:fontFamily="@font/basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/l1"
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textAllCaps="true"
                android:id="@+id/status"
                android:textColor="#000"
                android:gravity="center_vertical|start"
                android:textSize="15sp"/>

            <TextView
                android:layout_toRightOf="@+id/status"
                android:id="@+id/Staff_order_status"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/l2"
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone No:"
                android:id="@+id/tele"
                android:textColor="#000"
                android:textAllCaps="true"
                android:gravity="center_vertical|start"
                android:textSize="15sp"/>
            <TextView
                android:layout_toRightOf="@+id/tele"
                android:id="@+id/Staff_order_phone"
                android:gravity="center_vertical|end"
                android:textAllCaps="true"
                android:fontFamily="@font/basic"
                android:textSize="18sp"
                android:text="0139035514"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/l3"
            android:id="@+id/l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressText"
                android:gravity="center_vertical|end"
                android:textAllCaps="true"
                android:fontFamily="@font/basic"
                android:textSize="15sp"
                android:text="Customer Address:"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/addressText"
                android:id="@+id/Staff_order_address"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:text="ADDRESS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l4"
            android:layout_marginTop="22dp"

            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStaffEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fui_transparent"
                android:fontFamily="@font/basic"
                android:text="Edit"
                android:textColor="#000"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnStaffRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fui_transparent"
                android:fontFamily="@font/basic"
                android:text="Remove"
                android:textColor="#000"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnStaffDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fui_transparent"
                android:fontFamily="@font/basic"
                android:text="Detail"
                android:textColor="#000"
                android:textSize="10sp" />


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
